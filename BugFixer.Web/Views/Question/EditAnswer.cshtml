@model BugFixer.Application.ViewModels.Questions.UpdateAnswerVM;
@{
    ViewData["Title"] = "EditAnswer";
}

<div class="user-page-style">

    <div class="breadcumb-layer">
        <div class="container">
            <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="/" itemprop="item"><span itemprop="name"> باگ فیکسر </span></a></li>
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item"><span itemprop="name"> ویرایش جواب کاربر </span></a></li>
            </ul>
        </div>
    </div>

    <div class="questions-layer page-style">

        <div class="container">

            <div class="right-col">

                <section class="question-submit-layer">

                    <header class="top-heading"><h1> <a href="">ویرایش جواب شما</a> </h1> @* <span><i>12K</i> پرسش تا بحال ثبت شده است </span> *@</header>

                    <div class="inner">


                        <div class="submit-layer">
                         

                            <form asp-controller="Question" asp-action="EditAnswer" class="form-layer-style" method="post">
                                <input type="hidden" asp-for="AnswerId" />
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="input-layer">
                                            <label> <i class="icon-document"></i> متن جواب خود را وارد نمایید </label>
                                            <input type="text" asp-for="Text">
                                        </div>
                                        <span class="text-danger" asp-validation-for="Text"></span>
                                    </div>
                      
                                    <div class="col-md-3 col-sm-4 col-xs-7 pull-left">
                                        <button type="submit" class="submit-button green"> <span>ویرایش</span> </button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </section>

            </div>





        </div>

    </div>

</div>

