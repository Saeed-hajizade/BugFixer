@model BugFixer.Application.ViewModels.Questions.CreateQuestionVM;
@{
    ViewData["Title"] = "Submit-Question";
}


@section SideBar{
    <partial name="_SideBar" />
}
<div class="user-page-style">

    <div class="breadcumb-layer">
        <div class="container">
            <ul itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="/" itemprop="item"><span itemprop="name"> باگ فیکسر </span></a></li>
                <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"><a href="" itemprop="item"><span itemprop="name"> ثبت پرسش جدید </span></a></li>
            </ul>
        </div>
    </div>

    <div class="questions-layer page-style">

        <div class="container">

            <div class="right-col">

                <section class="question-submit-layer">

                    <header class="top-heading"><h1> <a href="">ثبت پرسش جدید</a> </h1> <span><i>@ViewBag.Count</i> پرسش تا بحال ثبت شده است </span></header>

                    <div class="inner">


                        <div class="submit-layer">
                            <p> لطفا قبل از ثبت پرسش قوانین را مطالعه نمایید ، ثبت پرسش شما تایید قوانین محسوب خواهد شد :</p>
                            <ul>
                                <li> ادب و احترام در گفتگو می بایست رعایت شود ، در صورت مشاهده تخلف کاربری شما مسدود خواهد شد. </li>
                                <li> از ثبت پرسش تکراری خودداری نمایید. </li>
                                <li> عنوان پرسش واضح و تا حد امکان کوتاه باشد. </li>
                                <li> از تگ های کاملا مرتبط استفاده نمایید. </li>
                                <li> جهت کسب پاسخ صریح ، متن پرسش خود را کاملا واضح ارسال نمایید. </li>
                            </ul>

                            <form asp-controller="Question" asp-action="Create" class="form-layer-style" method="post">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="input-layer">
                                            <label> <i class="icon-document"></i> عنوان پرسش خود را وارد نمایید </label>
                                            <input type="text" asp-for="Title" >
                                        </div>
                                        <span class="text-danger" asp-validation-for="Title"></span>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="textarea-layer">
                                            <label> <i class="icon-document"></i> متن کامل پرسش </label>
                                            <textarea asp-for="Text"></textarea>
                                        </div>
                                        <span class="text-danger" asp-validation-for="Text"></span>
                                    </div>

                                    <div class="col-xs-12">
                                        <div class="input-layer">
                                            <!-- Use YourSelf autocomplete Plugin -->
                                            <label> <i class="icon-document"></i> تگ های مرتبط با پرسش شما </label>
                                            <input asp-for="Tag" placeholder="مثال: php-js-python">
                                        </div>

                                    </div>
                                    <div class="col-md-3 col-sm-4 col-xs-7 pull-left">
                                        <button type="submit" class="submit-button green"> <span>ثبت پرسش</span> </button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </section>

            </div>





        </div>

    </div>

</div>










