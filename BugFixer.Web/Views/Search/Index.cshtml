                                    </div>
                                    <button><i class="icon-sort"></i></button>
                                </form>
                            </div>
                        </div>
                        <!-- /Top -->

                        <!-- questions -->
                        <div class="questions-layer">
                            <!-- questions list -->
                    <!-- questions list -->
                    <div class="questions-list">
                        <!-- item -->
                        @foreach (var item in Model)
                        {
                            <article class="answered">
                                <h2><a href="/show-question/@item.Id">@item.Title</a></h2>
                                <span> 236 <i class="icon-comment-1"></i> </span>
                                <ul>
                                    <li> پرسیده شده توسط  <a href="">  @item.User.UserName </a> در 1  ساعت پیش </li>
                                    @if (item.Answers.Any())
                                    {
                                        <li> آخرین پاسخ توسط <a href=""> @item.Answers.FirstOrDefault().User.UserName </a> در 1 دقیقه پسش </li>
                                    }
                                    else
                                    {
                                        <li>
                                            بدون پاسخ
                                        </li>
                                    }
                                </ul>
                                <div class="detail">
                                    <div class="tags-layer">
                                        @foreach (var tag in item.QuestionTags)
                                        {
                                            <a href=""> @tag.Tag </a>
                                        }

                                    </div>
                                    <div class="left-side">
                                        <span> 983 <i class="icon-star"></i> </span>
                                        <span> 264 <i class="icon-eye"></i> </span>
                                    </div>
                                </div>
                            </article>
                        }
                    </div>
                    <!-- /questions list -->
                        <!-- /questions -->                         

