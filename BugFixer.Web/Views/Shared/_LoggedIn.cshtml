<div class="clientarea-layer">

    @if (User.Identity.IsAuthenticated)
    {
        <div class="loggedin-status">
            <i class="icon-profile"></i>
            <span> حساب کاربری شما  </span>
            <div class="sublayer">
                <div class="avatar">
                    <a href=""><img src="/images/UsersAvatar/@User.FindFirst("UserAvatar").Value"></a>
                    <div>
                        <span class="fullname"> @User.Identity.Name </span>
                        <span class="detail"> 123 پرسش | 1236 پاسخ </span>
                    </div>
                </div>
                <ul>
                    <li><a href="/User-Panel"> مشاهده حساب کاربری </a></li>
                    <li>><a href="/user-panel/edit"> ویرایش حساب کاربری </a></li>
                    <li><a href="/user-panel/change-password"> تغییر رمز عبور </a></li>
                    <li><a href="/user-panel/questions"> پرسش های من </a></li>
                    <li><a href="/user-panel/answers"> پاسخ های من </a></li>
                    <li><a href="/logOut"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="signout-status">
            <i class="icon-profile"></i>
            <a href="/Login"> ورود / </a>
            <a href="/Register"> عضویت </a>
        </div>
    }
</div>